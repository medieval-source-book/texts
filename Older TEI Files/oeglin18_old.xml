					</app>
				</title>
			</head>
		</front>
		<body>
			<pb ed="#Transcription" facs="#oeglin_18"/>
			<pb ed="#Transcription" facs="#oeglin_18_notes"/>
			<fw facs="#oeglin_18" type="header" place="margin-topright"></fw>
			<fw facs="#oeglin_18_notes" type="header" place="margin-topright"></fw>
