			<fw facs="#oeglin_18_notes" type="header" place="margin-topright"></fw>
			<div n="1">
				<p n="1">
					<s>
						<app>
							<lem wit="#Transcription">
								Ade mit layd \ ich von dir schayd \
							</lem>
							<rdg wit="#Translation">
								Farewell! It hurts to part from you;
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								dardurch mein hertz \ unseglich schmertz \ 
							</lem>
							<rdg wit="#Translation">
								my heart feels unspeakable torment
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								all stund empfind \ und ist entzynd \
							</lem>
							<rdg wit="#Translation">
								constantly and burns
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								in jamers wee \ 
							</lem>
							<rdg wit="#Translation">
								with sorrow’s woe.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								ade ade \ 
							</lem>
							<rdg wit="#Translation">
								Farewell, farewell!
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								on dich lusst mich kaynr frewden me.
							</lem>
							<rdg wit="#Translation">
								Without you, no joy can amuse me.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								Ade mein freyd \ 
							</lem>
							<rdg wit="#Translation">
								Goodbye to you, my joy,
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								der ich kayn zeit \ zů sechen an \ 
							</lem>
							<rdg wit="#Translation">
								 whom I could never look at with revulsion.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								verdriess möcht han \ das ist mir gwenndt \
							</lem>
							<rdg wit="#Translation">
								Consider this: don’t let your loyalty waver
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								und bin ellendt \ 
							</lem>
							<rdg wit="#Translation">
								and I’m a wretch:
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								in layd ich stee \ 
							</lem>
							<rdg wit="#Translation">
								I live in pain. 
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								ade ade \ 
							</lem>
							<rdg wit="#Translation">
								Farewell, farewell!
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								on dich lusst mich kaynr frewden me.
							</lem>
							<rdg wit="#Translation">
								Without you no joy can amuse me.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								Ade \ 
							</lem>
							<rdg wit="#Translation">
								Farewell!
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								gedenck dein trew nit krenck \ 
							</lem>
							<rdg wit="#Translation">
								Consider this: don’t let your loyalty waver
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								und hallt recht maß \ 
							</lem>
							<rdg wit="#Translation">
								and continue to live in upstanding modesty. 
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								vergiß nit das \ 
							</lem>
							<rdg wit="#Translation">
								Don’t forget what
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								als du wol waist \ 
							</lem>
							<rdg wit="#Translation">
								you well know.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								dein trew mir laist \ 
							</lem>
							<rdg wit="#Translation">
								Lend me your loyalty
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								hinfür als ee \ 
							</lem>
							<rdg wit="#Translation">
								from now on as before.
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								ade ade \ 
							</lem>
							<rdg wit="#Translation">
								Farewell, farewell!
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								on dich lusst mich kaynr frewden me.
							</lem>
							<rdg wit="#Translation">
								Without you no joy can amuse me.
							</rdg>
						</app>
					</s>
				</p>
