					<s>
						<app>
							<lem wit="#Transcription">
								Zwischen perg und tieffe tal \ 
							</lem>
							<rdg wit="#Translation">
								Between hill and valley deep
							</rdg>
						</app>

						<app>
							<lem wit="#Transcription">
								da ligt ain freie strassen \ 
							</lem>
							<rdg wit="#Translation">
