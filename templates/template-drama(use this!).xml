
<?xml-stylesheet href="../src/vmachine.xsl" type="text/xsl" ?>
<?xml-model href="../schema/vmachine.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="../schema/vmachine.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<!DOCTYPE TEI
[
<!ENTITY % Menota_entities SYSTEM
'../menota/menota-entities.txt'   >
%Menota_entities;]
>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
	<teiHeader>
		<fileDesc>
			<titleStmt>
				<title>TITLE</title>
				<author>AUTHOR</author>
			</titleStmt>
			<respStmt>
				<resp>Transcription by</resp>
				<name>WHO TRANSCRIBED ME?</name>
			</respStmt>
			<respStmt>
				<resp>Translation by</resp>
				<name>WHO TRANSLATED ME?</name>
			</respStmt>
			<respStmt>
				<resp>Digital Transcription by</resp>
				<name>YOUR NAME HERE</name>
			</respStmt>
			<publicationStmt>
				<publisher>TO BE DECIDED! SOMETHING ABOUT STANFORD</publisher>
				<availability>
					<p></p>
				</availability>
			</publicationStmt>
			<notesStmt>
				<note anchored="true"></note>
				<note type='critIntro'>CRITICAL INTRODUCTION GOES HERE</note>
			</notesStmt>
			<sourceDesc>
				<p>ANY SOURCES GO HERE</p>
				<p></p>
			</sourceDesc>
		</fileDesc>
		<encodingDesc>
			<editorialDecl>
				<p></p>
			</editorialDecl>
			<variantEncoding method="parallel-segmentation" location="internal"/>
		</encodingDesc>
	</teiHeader>
	<text>
		<front>
			<div>
				<listWit>
					<witness xml:id="Transcription">TITLE</witness>
					<witness xml:id="Translation">TITLE'S TRANSLATION</witness>
				</listWit>
			</div>
		</front>
		<body>
			<head>
				<title>
					<app>
						<lem wit="#Transcription">TITLE</lem>
						<rdg wit="#Translation">TITLE'S TRANSLATION</rdg>
					</app>
				</title>
			</head>

			<!-- This tag pair should be used for all stage directions -->

			<stage> </stage>

			<!-- This block should be used for speaking events -->

			<sp>
				<app>
					<lem wit="#Transcription">
						<speaker>TRANSCRIPTION OF SPEAKER'S NAME GOES HERE</speaker>
						<p>TRANSCRIPTION OF SPEECH GOES HERE</p>     <!-- this could really be either <p> or <l> depending on if prose (then <p>) or verse (then <l>) -->
					</lem>
					<rdg wit="#Translation">
						<speaker>TRANSLATION OF SPEAKER'S NAME GOES HERE</speaker>
						<p>TRANSLATION OF SPEECH GOES HERE
							<note anchored="true">
									<p>THIS IS A NOTE FORMAT. NOTE IT SHOULD OCCUR IN THE READING TAG (THE TRANSLATION)</p>
							</note>
						</p>
					</rdg>
				</app>
			</sp>
			
		</body>
	</text>
</TEI>
